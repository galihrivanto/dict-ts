{
  "compilerOptions": {
    "target": "es2016",   
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true,
    "outDir": "dist",
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
